<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:guidelineUseRtl="false"
    app:layout_wrapBehaviorInParent="horizontal_only"
    tools:context=".HomeScreenActivity">

    <Button
        android:id="@+id/btn_CreateWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:text="Create a Workout"
        android:textColor="#424141"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_FindTrainer"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_FindTrainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:text="Find a Trainer"
        android:textColor="#424141"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_CreateWorkout"
        app:layout_constraintEnd_toStartOf="@+id/btn_Settings"
        app:layout_constraintStart_toEndOf="@+id/btn_CreateWorkout" />

    <Button
        android:id="@+id/btn_Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="#00FFFFFF"
        android:text="Settings"
        android:textColor="#424141"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_CreateWorkout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_FindTrainer" />

    <TextView
        android:id="@+id/tv_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Welcome"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_Profile"
        android:layout_width="50dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contextClickable="false"
        android:scaleType="fitStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>